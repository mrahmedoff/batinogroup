rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Messages collection - allow read/write for authenticated users
    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if true; // Allow anyone to submit messages
      allow update, delete: if request.auth != null;
    }
    
    // Testimonials collection
    match /testimonials/{testimonialId} {
      allow read: if true; // Public read
      allow write: if request.auth != null; // Admin only
    }
    
    // Analytics collection
    match /analytics/{document=**} {
      allow read, write: if request.auth != null; // Admin only
    }
    
    // Settings collection
    match /settings/{document=**} {
      allow read: if true; // Public read
      allow write: if request.auth != null; // Admin only
    }
  }
}
